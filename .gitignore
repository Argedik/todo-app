*.class
*.log
*.pyc
*.swp
.DS_Store
.idea/
.vscode/
*.iml

# Flutter/Dart/Pub
.dart_tool/
.packages
.pub/
.pub-cache/
.flutter-plugins
.flutter-plugins-dependencies
.metadata

# Build outputs
build/
**/build/

